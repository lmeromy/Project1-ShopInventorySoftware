<h2>Edit/Update Markup</h2>

<form method="POST" action="/tools/<%=@item.id%>">

  <label for="product"> Product Name:</label>
  <input id="product" type="text" name="product" value="<%=@item.product%>"/>

  <label for="cat"> Product Category:</label>
  <input id="cat" type="text" name="category" value="<%=@item.category%>"/>

  <label for="wholesale">Wholesale Price:</label>
  <input id="wholesale" type="number" name="costprice" value="<%=@item.costprice%>"/>


  <div class="update-markup">
  <label for="retail">UPDATE Retail Price:</label>
  <input id="retail" type="number" name="sellprice" value="<%=@item.sellprice%>"/>
  </div>


  <label for="manuf-select">Select a Brand:</label>
  <select name="manuf_id" id="manuf-select" selected="<%=@item.manuf_id%>">
    <% @all_items.each do |stock| %>
      <% if stock.manuf_id == @item.manuf_id %>
        <option value=<%= stock.manuf_id %> selected><%= stock.brand.name%></option>
      <% else %>
        <option value=<%= stock.manuf_id %>><%= stock.brand.name%></option>
      <% end %>
    <% end %>
  </select>

  <label for="quantity">Quantity in stock:</label>
  <input id="quantity" type="number" name="quantity" value="<%=@item.quantity%>"/>

  <input type="submit" value="Update Item Markup"/>

</form>
